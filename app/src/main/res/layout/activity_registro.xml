<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.motetronica.apptutores.Registro"
    android:background="@color/background1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:text="REGISTRO TUTORIUM"
        android:textColor="@color/Negro"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="110dp"
        android:id="@+id/tableLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Ud desea registrarse como:"
                android:textColor="@color/Negro"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:textSize="12dp"
                android:id="@+id/text1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

            <RadioGroup
                android:id="@+id/rbgrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/rbtutor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TUTOR"
                    android:textSize="20dp"
                    android:textColor="@color/colorNegro"
                    />
                <RadioButton
                    android:id="@+id/rbestudiante"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ESTUDIANTE"
                    android:textSize="20dp"
                    android:textColor="@color/colorNegro"
                    />

            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >

            <TextView
                android:text="Cedula:"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textCedula" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/txtCedula"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Nombres:"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textNombres" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/txtNombres"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Apellidos:"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textApellidos" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/txtApellidos"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="ContraseÃ±a:"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textContrasena" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/txtConfContra"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Confirmar Contr:"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textConfirmarContrasena" />
            <EditText
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/ConfContra"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            >
            <TextView
                android:text="Mail:"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:id="@+id/textMail" />
            <EditText
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:textSize="18dp"
                android:textColor="@color/colorNegro"
                android:background="@color/Blanco"
                android:id="@+id/txtMail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="0.39"
            >
            <Button
                android:id="@+id/nuevo"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="REGISTRAR"
                android:textSize="@dimen/boton_mediano"
                android:background="@drawable/boton_nuevo"
                android:textColor="@color/white"
                android:paddingRight="@dimen/espacio_grande"
                android:layout_marginRight="@dimen/espacio_mediano"
                android:textAllCaps="false"
                android:onClick="pantalla_inicio"
                />

            <Button
                android:id="@+id/veterano"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="REGRESAR"
                android:textSize="@dimen/boton_mediano"
                android:background="@drawable/boton_veterano"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:paddingRight="@dimen/espacio_grande"
                android:onClick="fin"
                />


        </LinearLayout>
    </TableLayout>



</RelativeLayout>

